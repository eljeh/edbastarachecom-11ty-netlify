---
layout: layouts/_base.njk
---
<article class="article">

  <header class="hero">
    <div class="content contained">
      <div class="hero-copy">
        <h1 class="page-title">
          {{ title }}
        </h1>

        <div class="project-details">
          {% if tags %}
          <span>
            {% for tag in tags %}
              {%- if tag != "post" -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
            </span>
          {% endif %}
        </div>

      </div>
      <picture class="hero-image">

        {% if heroImage %}
          {% image heroImage, title , "300", ''%}
        {% endif %}

      </picture>
    </div>
  </header>

  <section class="content">
    {{ layoutContent | safe }}
  </section>
  
</article>
<a href="{{ '/projects/' | url }}" class="animated">‚Üê Project list</a>
