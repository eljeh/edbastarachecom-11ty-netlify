---
layout: layouts/_base.njk
---
<article class="article">

  <div class="hero">
    <div>
      {% if heroImage %}
        {% image heroImage, title , "300", ''%}
      {% endif %}
      <a href="{{ '/' | url }}" class="animated pt-md">‚Üê Back Home</a>
    </div>
  </div>

  <section>
    <h1 class="title">{{debriefing}}</h1>
    <div class="columned-article">
      <div class="project-details">
        <ul>
          {% if Skills %}
            <li><label>Skills</label>{{Skills}}</li>
          {% endif %}
          {% if role %}
            <li><label>Role</label>{{role}}</li>
          {% endif %}
          {% if URL %}
            <li><label>URL</label>{{URL}}</li>
          {% endif %}
          {% if company %}
            <li><label>Company</label>{{company}}</li>
          {% endif %}
        </ul>
      </div>
      <article>
        {{ layoutContent | safe }}
        {% if conclusion %}
          <h2>Conclusion</h2>
          <p>{{conclusion}}</p>
        {% endif %}
        
          <strong class="my-lg">...visuals and code examples to come!</strong>

      </article>
    </div>
  </section>
  
</article>

