---
layout: layouts/_base.njk
---
<article>
  <h1>{{ title }}</h1>
  <div class="article-details">
    <span><strong>Published:</strong> <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time></span>
    {# <strong>Updated:</strong> <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate}}</time>  #}
    {% if tags %}
    <span>
      {% for tag in tags %}
        {%- if tag != "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
      </span>
    {% endif %}
  </div>
  {{ layoutContent | safe }}
</article>
<a href="{{ '/articles/' | url }}" class="animated">← Article list</a>
