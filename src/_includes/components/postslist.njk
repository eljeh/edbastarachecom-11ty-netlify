{% for post in postslist | reverse %}
	<article{% if post.url == url %} data-current="current item"{% endif %}>


	{# {% if post.data.heroImage %}
		<img src="{{post.data.heroImage | url}}" loading="lazy" width="100%" height="auto" alt="">
		{% image '{{post.data.heroImage | url}}' 'A sample inlined image' '600' 'mx-auto' %}
	{% endif %} #}


		<h3 class="heading">
			<a href="{{ post.url | url }}">
				{% if post.data.title %}
					{{ post.data.title }}
				{% else %}
					Untitled
				{% endif %}
			</a>
		</h3>
		<span>{{ post | readingTime }} read time</span>
		{% if post.data.description %}
			<p>
				{{ post.data.description }}
			</p>
		{% endif %}
		<p>
			<time datetime="{{ post.date | machineDate }}">
				{{ post.date | readableDate }}
			</time>
		</p>
		{% if post.data.tags %}
			<p>
				{% for tag in post.data.tags %}
					{%- if tag != "post" -%}
						{% set tagUrl %}/tags/{{ tag }}/{% endset %}
					<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
					{%- endif -%}
				{% endfor %}
			</p>
		{% endif %}
	</article>
{% endfor %}
